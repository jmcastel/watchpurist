.row	
	.jumbotron
		.text-center
			.h1.center-block My messages : 

- if @messages.count > 0 
	- @messages.each do |mess|
		.box.panel.panel-default
			.panel-body
				.row
					.col-md-6
				
						%h3 Title :
						%P.title
						= mess.title
						%br
						%h3 Content :
						%p.content
						= mess.content
					.col-md-6.text-center
						- @posts.each do |post|
							- if mess.post_id == post.id 
								= link_to (image_tag  post.image.url(:thumb)) , post , class: 'center-block'
								= link_to post.title ,post
						
			.panel-footer
				.row	
					.col-md-4
						%h5 On :
						%p.content
						= mess.created_at
					.col-md-4	
							
						%h5 from :
						%p.email
						= mess.email

					.col-md-4
						
						
					
- else
	.row	
		.jumbotron
			.text-center
				%h3.center-block You don't have any message yet !

= will_paginate @messages , renderer: BootstrapPagination::Rails