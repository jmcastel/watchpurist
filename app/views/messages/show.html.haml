
.box.panel.panel-default
	.panel-body
		.row
			
			.col-md-6
				%h3 Title :

			
				.well
					= @message.title 
			

			.col-md-6
				%h3 Content :
			
				.well
					= @message.content

		.row
			.col-md-12.text-center
				- @posts.each do |post|
					- if @message.post_id == post.id 
						= link_to (image_tag  post.image.url(:large)) , post , class: 'center-block'

	.panel-footer
		.row	
			.col-md-4
				%h5  #{time_ago_in_words @message.created_at} ago
				
			.col-md-4	
					
				%h5 from :#{ @message.email}
				
				

			.col-md-4
				
				= link_to 'Destroy' , post_private_message_path(@message.post_id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" 



