

= simple_form_for @post, html: { multipart: true } do |f|
  - if @post.errors.any?
    #errors
      %h2
      = pluralize(@post.errors.count, "error")
      prohibited this post from being saved
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.input :title, input_html: { class: 'form-control'}

  .form-group
    = f.input :brand, input_html: { class: 'form-control'}

  .form-group
    = f.input :model, input_html: { class: 'form-control'}

  .form-group
    = f.input :description, input_html: { class: 'form-control'}

  .form-group
    = f.input :year,  input_html: { class: 'form-control'} 

  .form-group
    = f.input :price,  input_html: { class: 'form-control',:inputmode => "numeric", :pattern => "[0-9]*", :type => "number"}
  .form-group  
    = f.input :currency, collection: [:USD, :EUR, :GBP]
  .form-group
    = f.input :availability, collection: [:now, :soon], input_html: { class: 'form-control'}

  .form-group
    = f.input :condition,  input_html: { class: 'form-control'}

  .form-group
    = f.input :location,  input_html: { class: 'form-control'}

  .form-group
    = f.input :shipping,  collection: [:worldwide, :country, :ask_us], input_html: { class: 'form-control'}

  .form-group
    = f.input :movement,  input_html: { class: 'form-control'}

  .form-group
    = f.input :case, :label => "case material" , input_html: { class: 'form-control'}

  .form-group
    = f.input :bracelet, :label => "bracelet material" ,  input_html: { class: 'form-control'}

  .form-group
    = f.input :dial,:label => "dial color" ,  input_html: { class: 'form-control'}

  .form-group
    = f.input :functions,  input_html: { class: 'form-control'}

  

  .form-group
    - if @post.image.present?
      = image_tag @post.image.url(:thumb)
      = f.label :remove_image
      = f.check_box :remove_image
    %br
    %br
    = f.file_field :image
    %br
    - if @post.image2.present?
      = image_tag @post.image2.url(:thumb)
      = f.label :remove_image
      = f.check_box :remove_image2
    %br
  .form-group
    = f.file_field :image2
    %br
    - if @post.image3.present?
      = image_tag @post.image3.url(:thumb)
      = f.label :remove_image
      = f.check_box :remove_image3
    %br
  .form-group
    = f.file_field :image3



  = f.button :submit, class: "btn btn-primary", data: { disable_with: "Please wait..." }
  %br

